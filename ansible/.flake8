[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    .backup,
    .cache,
    plays/roles/geerlingguy.*,
    plays/roles/sebthebert.*,
    plays/roles/ls_*
ignore =
    E501,  # Line too long (handled by max-line-length)
    W503   # Line break before binary operator (black style)
